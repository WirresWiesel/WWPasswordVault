<Page
    x:Class="WWPasswordVault.WinUI.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:WWPasswordVault.Core.Models"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="1"
            Padding="32"
            CornerRadius="12"
            MinWidth="365"
            MaxWidth="450"
            HorizontalAlignment="Center"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">

            <StackPanel Spacing="16">

                <!-- Title -->
                <TextBlock
                    Text="Password Vault"
                    FontSize="24"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Center" />

                <TextBlock
                    Text="Enter master password"
                    Opacity="0.7"
                    HorizontalAlignment="Center" />

                <ComboBox
                    x:Name="UserSelectionComboBox"
                    PlaceholderText="Select user"
                    HorizontalAlignment="Stretch"
                    ItemsSource="{Binding Users}"
                    SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
                    DisplayMemberPath="Username"
                    Text="{Binding Username, Mode=TwoWay}"
                    IsEditable="True"
                    IsTabStop="False"
                    DropDownClosed="OnDropDownClosed"/>

                <!-- Password -->
                <PasswordBox
                    x:Name="MasterPasswordBox"
                    PlaceholderText="Master password"
                    HorizontalAlignment="Stretch"
                    PasswordRevealMode="Hidden"
                    Password="{Binding Password, Mode=TwoWay}"
                    Visibility="{Binding IsNeedingPassword}"/>

                <!-- Password -->
                <PasswordBox
                    x:Name="ConfirmPasswordBox"
                    PlaceholderText="Confirm password"
                    HorizontalAlignment="Stretch"
                    PasswordRevealMode="Hidden"
                    Visibility="{Binding IsRegisterMode}"
                    Password="{Binding ConfirmPassword, Mode=TwoWay}" />

                <!-- Remember me -->
                <CheckBox
                    x:Name="RememberMeCheckBox"
                    Content="Remember me"
                    Margin="0,8,0,0"
                    IsChecked="{Binding RememberMe, Mode=TwoWay}"
                    Visibility="{Binding IsRegisteredUser}"/>

                <!-- Info Bar -->
                <InfoBar
                    x:Name="LoginInfoBar"
                    IsOpen="{Binding IsLoginInfoBarOpen, Mode=TwoWay}"
                    Severity="Informational"
                    Message="{Binding InfoMessage}"
                    Margin="0,8,0,0"/>

                <!-- Login Button -->
                <Button
                    x:Name="LoginButton"
                    Content="{Binding LoginButtonText}"
                    Height="40"
                    HorizontalAlignment="Stretch"
                    Command="{Binding LoginButton}"/>

                <!-- Register Area -->
                <StackPanel Spacing="4" HorizontalAlignment="Center">
                    <TextBlock
                        Text="No account yet?"
                        Opacity="0.7"
                        HorizontalAlignment="Center" />

                    <Button
                        x:Name="RegisterButton"
                        Content="Create new account"
                        Style="{StaticResource TextBlockButtonStyle}"
                        Command="{Binding RegisterButton}"/>

                    <Button
                        x:Name="DeleteUserButton"
                        HorizontalAlignment="Center"
                        Content="Delete User"
                        Style="{StaticResource TextBlockButtonStyle}"
                        Visibility="{Binding IsRegisteredUser}">

                        <Button.Flyout>
                            <Flyout>
                                <Grid
                                    Padding="12"
                                    MinWidth="260"
                                    MaxWidth="320">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Erklärung -->
                                    <TextBlock Grid.Row="0" TextWrapping="Wrap" Margin="0,0,0,12">
                                        <Run Text="Do you want to delete this user including all associated programs?"/>
                                        <LineBreak/>
                                        <LineBreak/>
                                        <Run Text="Programs can be kept, but all passwords are cryptographically bound to the user and will become unusable."/>
                                        <LineBreak/>
                                        <Run Text="This action cannot be undone."/>
                                    </TextBlock>

                                    <!-- Buttons -->
                                    <Grid
                                        Grid.Row="1"
                                        HorizontalAlignment="Center">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Button
                                            Width="100"
                                            Grid.Column="0"
                                            Content="Delete user"
                                            Command="{Binding DeleteUserOnlyButton}"/>

                                        <Button
                                            Width="100"
                                            Grid.Column="2"
                                            Content="Delete all"
                                            Style="{ThemeResource AccentButtonStyle}"
                                            Command="{Binding DeleteUserButton}"/>
                                    </Grid>
                                </Grid>
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
